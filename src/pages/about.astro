---
import Layout from "../layouts/Layout.astro";
import AboutComponent from "../components/About.astro";
---

<Layout>
    <section class="text-gray-100 min-h-screen bg-[#0b0f1a]">
        <section class="w-full">
            <AboutComponent />
        </section>
    </section>

    <script>
        (function () {
            try {
                // Force SPA state to 'about'
                const ev = new CustomEvent("spa:navigate", {
                    detail: { area: "main", target: "about" },
                    bubbles: true,
                    composed: true,
                });
                window.dispatchEvent(ev);
                document.dispatchEvent(ev);
                // Keep hash consistent for router
                if (window.location.hash !== "#about") {
                    window.location.hash = "#about";
                }
            } catch (e) {
                window.location.hash = "#about";
            }
        })();
    </script>
</Layout>
