<!doctype html>
<html>
    <head>
        <title>Contact Form</title>
        <script
            type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
        ></script>

        <script type="text/javascript">
            (function () {
                // https://dashboard.emailjs.com/admin/account
                emailjs.init({
                    publicKey: "v7kJbCEOfW_Yu5PMB",
                });
            })();
        </script>
        <script type="text/javascript">
            window.onload = function () {
                const form = document.getElementById("contact-form");
                const statusEl = document.getElementById("status");
                form.addEventListener("submit", function (event) {
                    event.preventDefault();
                    statusEl.textContent = "Enviando…";
                    statusEl.className = "status";
                    emailjs
                        .sendForm("service_k0tt2ad", "template_s80pv16", this)
                        .then(
                            () => {
                                statusEl.textContent = "¡Mensaje enviado!";
                                statusEl.className = "status success";
                                form.reset();
                            },
                            (error) => {
                                statusEl.textContent =
                                    "Error al enviar. Intenta mas tarde.";
                                statusEl.className = "status error";
                                console.log("FAILED...", error);
                            },
                        );
                });
            };
        </script>
    </head>
    <body>
        <div class="page">
            <div class="card">
                <div class="card-header">
                    <h1 class="title">Contacto</h1>
                    <a class="link" href="/">Inicio</a>
                </div>
                <p class="subtitle">
                    Enviame un mensaje y te respondere pronto.
                </p>
                <form id="contact-form" class="grid">
                    <input
                        type="hidden"
                        name="time"
                        value="Mar 10 2025 08:46"
                    />
                    <label>Name</label>
                    <input type="text" name="name" required />
                    <label>Email</label>
                    <input type="email" name="email" required />
                    <label>Subject</label>
                    <input type="text" name="title" required />
                    <label>Message</label>
                    <textarea name="message" required></textarea>
                    <div class="actions">
                        <input class="btn" type="submit" value="Send" />
                        <span id="status" class="status"></span>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
